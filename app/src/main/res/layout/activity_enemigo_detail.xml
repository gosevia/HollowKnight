<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@color/colorBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:context=".EnemigoDetailActivity">
        <TextView
            android:id="@+id/enemigo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:textColor="@color/colorWhite"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <ImageView
            android:id="@+id/enemigo_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="200dp"
            android:paddingBottom="10dp" />
        <TextView
            android:id="@+id/enemigo_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/enemigo_hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/enemigo_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <CheckBox
            android:id="@+id/defeated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/defeated"
            android:textColor="@color/colorWhite"
            android:onClick="onDefeatedClicked" />
        <TextView
            android:id="@+id/enemigo_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/difficulty"
            android:textColor="@color/colorWhite"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <RatingBar
            android:id="@+id/difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>